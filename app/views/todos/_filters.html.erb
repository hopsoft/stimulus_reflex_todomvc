<section class="footer">
  <span class="todo-count">
    <strong><%= @all_todos.active.count %></strong> <%= "item".pluralize @all_todos.active.count %> left
  </span>

  <ul class="filters">
    <li>
      <%= link_to "All", "#", class: filter_css(:all), data: { controller: "filter", action: "click->filter#apply", filter: "all" } %>
    </li>
    <li>
      <%= link_to "Active", "#", class: filter_css(:active), data: { controller: "filter", action: "click->filter#apply", filter: "active" } %>
    </li>
    <li>
      <%= link_to "Completed", "#", class: filter_css(:completed), data: { controller: "filter", action: "click->filter#apply", filter: "completed" } %>
    </li>
  </ul>

  <% if @all_todos.completed.any? %>
    <button class="clear-completed" data-controller="todos" data-action="click->todos#destroyCompleted">
      Clear completed
    </button>
  <% end %>
</section>
