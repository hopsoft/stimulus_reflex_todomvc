<% if todo.id == @edit_id %>
  <li class="editing">
    <input autofocus type="text" class="edit" value="<%= todo.title %>" <%= "checked" if todo.completed? %>
      data-controller="todo" data-action="change->todo#update keypress->todo#cancelEdit blur->todo#cancelEdit" data-id="<%= todo.id %>">
  </li>
<% else %>
  <li class="<%= "completed" if todo.completed? %>" data-controller="todo" data-id="<%= todo.id %>">
    <div class="view">
      <input type="checkbox" class="toggle" data-action="click->todo#toggle" <%= "checked" if todo.completed? %>>
      <label data-action="click->todo#edit">
        <%= todo.title %>
      </label>
      <button name="button" type="button" class="destroy" data-action="click->todo#destroy" />
    </div>
  </li>
<% end %>
